[Unit]
Description=Furkan Baytekin Website
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=furkan
Group=furkan
WorkingDirectory=/opt/furkanbaytekin
EnvironmentFile=/opt/furkanbaytekin/.env
ExecStart=/opt/furkanbaytekin/furkanbaytekin
Restart=always
RestartSec=5s
StandardOutput=journal
StandardError=journal
SyslogIdentifier=furkanbaytekin

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/furkanbaytekin/data/cache /opt/furkanbaytekin/data

# Resource limits
LimitNOFILE=65536
TimeoutStopSec=30s

[Install]
WantedBy=multi-user.target
